<div class="container hero">

  <p id="notice"><%= notice %></p>

  <p>
    <strong>Image:</strong>
    <%= image_tag @blog.avatar.url(:medium) %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= @blog.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= @blog.content %>
  </p>

  <%= link_to 'Edit', edit_blog_path(@blog) %> |
  <%= link_to 'Back', blogs_path %>


</div>