<div class="container hero">
  <p id="notice"><%= notice %></p>

  <h1>Blogs</h1>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Image</th>
        <th>Title</th>
        <th>Content</th>
        <th colspan="3" class="text-center">Action</th>
      </tr>
    </thead>

    <tbody>
      <% @blogs.each do |blog| %>
        <tr>
          <td><%= blog.image %></td>
          <td><%= blog.title %></td>
          <td><%= blog.content %></td>
          <td><%= link_to 'Show', blog, class: "btn btn-sm btn-primary btn-block" %></td>
          <td><%= link_to 'Edit', edit_blog_path(blog), class: "btn btn-sm btn-warning btn-block" %></td>
          <td><%= link_to 'Destroy', blog, class: "btn btn-sm btn-danger btn-block", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Blog', new_blog_path, class: "btn btn-success" %>
</div>