<%= form_with(model: blog, local: true, :html => { :multipart => true, :autocomplete => 'off' }) do |form| %>
  <% if blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
        <% blog.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-8 col-xl-8">
      <div class="form-group">
        <label class="pull-left">Image</label>
        <%= form.file_field :avatar, class: "form-control-file pull-right", id: 'blogImage' %>
        <br>
        <img class="blog-img-prev img-fluid display_none">
      </div>      
    
      <div class="field">
        <%= form.label :title %>
        <%= form.text_field :title, class: "form-control" %>
      </div>
    
      <div class="field">
        <%= form.label :content %>
        <%= form.cktext_area :content, id: 'sometext' %>
      </div>
    </div>
  </div>

  

  <div class="actions mt-3">
    <%= form.submit({:class => "btn btn-success pull-left mr-2"}) %>
  </div>
<% end %>
